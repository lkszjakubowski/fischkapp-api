{
  "compilerOptions": {
             
    "target": "ESNext",                         
    "module": "commonjs",                  

    "outDir": "./dist",                        
    "rootDir": "./src",                       

    "strict": true,                          
    

    
    "moduleResolution": "node",            
    "esModuleInterop": true,                 
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true
  },
  "typeAcquisition": { "enable": true }
}
